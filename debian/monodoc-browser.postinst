#!/bin/sh
set -e

case "$1" in
    configure)
        
        if [ "$2" = "" ]; then
            # On first install, generate the index (won't necessarily be triggered).
            /usr/bin/dpkg-trigger --by-package=monodoc-browser /usr/lib/monodoc/sources
        fi

        ;;

    triggered)

        /usr/bin/update-monodoc

        ;;

esac

